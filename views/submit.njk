{% extends "layout.njk" %}
{% block content %}
  <h2 class="ui header">Submit — {{ problem.id }} — {{ problem.title }}</h2>
  <p>Time limit: {{ problem.timelimit_ms }} ms · Memory: {{ problem.memlimit_kb }} KB · Score: {{ problem.score }}</p>

  <form class="ui form" method="post" action="/contest/{{ contest.id }}/problem/{{ problem.id }}/submit">
    <div class="field">
      <label>Language</label>
      <select name="language" class="ui dropdown">
        <option value="node">Node.js (JavaScript)</option>
        <option value="python">Python 3</option>
      </select>
    </div>
    <div class="field">
      <label>Source</label>
      <textarea name="source" rows="20"></textarea>
    </div>
    <button class="ui primary button">Submit</button>
  </form>
{% endblock %}
